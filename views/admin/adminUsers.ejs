    <section class="content-main" style="padding: 20px;">
        <div class="content-header">
            <div>
                <h2 class="content-title card-title">Users</h2>
                <p>block / unblock Users</p>
            </div>
        </div>
        <div class="card">
            <div class="card-body">
                <div class="row">
                    <div class="col-12">
                        <div class="col-search mb-4" style="margin-top: 20px; margin-left: 20px;">
                            <form class="searchform">
                                <div class="input-group" style="max-width: 300px;">
                                    <input list="search_terms" type="text" class="form-control" placeholder="Search term" />
                                    <button class="btn btn-light bg" type="button"><i class="material-icons md-search"></i></button>
                                </div>
                                <datalist id="search_terms">
                                    <option value="Products"></option>
                                    <option value="New orders"></option>
                                    <option value="Apple iphone"></option>
                                    <option value="Ahmed Hassan"></option>
                                </datalist>
                            </form>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-hover w-100">
                                <tbody>
                                    
                                    <% userData.forEach((result)=>{%>
                                   

                                    <tr>
                                        <td><b>
                                            <%= result.name %>
                                        </b></td>
                                        <td>
                                            <%= result.email %>
                                        </td>
                                        <td>
                                            <%= result.mobile %> 
                                        </td>
                                        <td id="status_<%=result._id%>">
                                            <%=result.status%>
                                        </td>
                                        <td>
                                            <a href="#" class="btn btn-primary"
                                            onclick="toggleUser('<%= result._id %>', '<%= result.status %>')">
                                            <% if(result.status==="Active" ) { %>
                                                Block
                                                <% } else { %>
                                                    Activate
                                                    <% } %>
                                        </a>
                                        </td>
                                    </tr>
                                    


                               <% }) %>
                                </tbody>
                            </table>
                        </div>
                    </div>
                    <!-- .col// -->
                </div>
                <!-- .row // -->
            </div>
            <!-- card body .// -->
        </div>
        <!-- card .// -->
    </section>
    
    <style>
        .table-responsive {
            overflow-x: auto;
        }
    
        .table {
            width: 100%;
            max-width: 100%;
