
<%- include('../layout/admin/adminHeader') %>

<div class="screen-overlay"></div>

 <section class="content-main">
    <div class="row">
        <div class="col-9">
            <div class="content-header">
                <h2 class="content-title">Edit Category</h2>
                <div>
                   
                </div>
            </div>
        </div>
        <div class="col-9">
            <div class="card">
                <div class="card-body">
                    <div class="row gx-5">
                        
                        <div class="col-lg-9">
                            <section class="content-body p-xl-4">

                            
                         <form id="EditCategory-form" action="/admin/editCategory" method="post" onsubmit="return validateForm()">
                            <div class="row mb-4">
                                <label class="col-lg-3 col-form-label">Category name*</label>
                                <div class="col-lg-9">
                                    <input type="text" class="form-control" placeholder="Type here" 
                                           value="<%= Category ? Category.name : '' %>" id="category-name" name="name" required />
                                    <input type="hidden" id="categoryid" name="categoryId" value="<%= Category ? Category._id : '' %>">
                        
                                    
                                    <% if (messages.nameError) { %>
                                        <div class="error-message text-danger" id="name-error"><%= messages.nameError %></div>
                                    <% } %>
                                </div>
                            </div>
                            <button class="btn btn-primary" type="submit">Edit Category</button>
                        </form>                        
                            </section>
                           
                        </div>
                        
                    </div>
                    
                </div>
                
            </div>
        </div>
    </div>
 </section>

 <script src="https://cdn.jsdelivr.net/npm/toastify-js"></script>

 <script>
    function validateForm() {
        let isValid = true;
    
        // Clear previous error messages
        document.getElementById('name-error').innerText = '';
        
        // Validate name
        const name = document.getElementById('category-name').value.trim();
        if (name === '') {
            document.getElementById('name-error').innerText = 'Category name is required';
            isValid = false;
        }
    
        
    
        return isValid;
    }
    </script>




<%- include('../layout/admin/adminFooter') %>