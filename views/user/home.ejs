<script>
    function addtoCart(productId) {
        // Assuming you have a quantity input somewhere on the page
        const quantity = parseInt(document.getElementById('quantity').value, 10) || 1;

        if (isNaN(quantity) || quantity < 1) {
            Swal.fire({
                icon: 'error',
                title: 'Invalid Quantity',
                text: 'Quantity must be at least 1.',
            });
            return;
        }

        fetch(`/addingcart/${productId}/${quantity}`, {
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            },
            body: JSON.stringify({ quantity }),
        })
        .then((response) => {
            if (!response.ok) {
                throw new Error('Failed to add product to cart.');
            }
            return response.json();
        })
        .then((data) => {
            Swal.fire({
                icon: 'success',
                title: 'Product added to cart!',
                showConfirmButton: false,
                timer: 1500,
            });

            // Optionally reload the page or redirect to the cart page after a delay
            setTimeout(() => {
                location.reload();
            }, 1500);
        })
        .catch((error) => {
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: error.message,
            });
        });
    }
</script>


