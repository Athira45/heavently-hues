

<%- include('../layout/User/header') %>
  
   
    
  

<br><br>
    <div class="container">
        <h2 style="font-size: 24px;">Forgot Password</h2>
        <p>Please enter your email below and we will send you a secure link to reset your password.</p>
        <form action="/forgotOTP" method="POST">
            <div class="form-group">
                <label for="email">Email Address</label>
                <input type="email" id="email" name="email" placeholder="Enter your email address" required style="width: 30%;">
            </div>
            <div class="form-group form-button">
                <input type="submit" class="form-submit" value="Sent OTP">
            </div>
        </form>
        <div class="form-footer">
            <p>Remember your password? <a href="/login">Sign in</a></p>
        </div>
    </div>

