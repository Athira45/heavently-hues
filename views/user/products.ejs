<script>
    function addtoCart(productId) {
        console.log("productId:", productId);

        fetch(`/addCartFromproductsList/${productId}`, { 
            method: 'POST',
            headers: {
                'Content-Type': 'application/json',
            }
        })
        .then((response) => {
            if (!response.ok) {
                console.error("Failed to add product to cart. Response:", response);
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to add product to cart.',
                });
                return;
            }
            return response.json();
        })
        .then((data) => {
            if (data.message) {
                Swal.fire({
                    icon: 'success',
                    title: 'Success',
                    text: data.message,
                });
            } else {
                Swal.fire({
                    icon: 'error',
                    title: 'Error',
                    text: 'Failed to add product to cart.',
                });
            }
        })
        .catch((error) => {
            console.error("Error:", error);
            Swal.fire({
                icon: 'error',
                title: 'Error',
                text: 'Something went wrong.',
            });
        });
    }
</script>

<script>
   function addtoWishlist(productId) {
    fetch(`/addingWishlist/${productId}`, {
        method: 'POST',
        headers: {
            'Content-Type': 'application/json',
        },
    })
    .then(response => response.json())
    .then(data => {
        if (data.message && data.message.includes('added')) {
            Swal.fire({
                icon: 'success',
                title: 'Added!',
                text: data.message,
                timer: 1500,
                showConfirmButton: false
            });
        } else if (data.error && data.error.includes('removed')) {
            Swal.fire({
                icon: 'info',
                title: 'Removed!',
                text: data.error,
                timer: 1500,
                showConfirmButton: false
            });
        } else {
            // Fallback for unexpected responses
            Swal.fire({
                icon: 'info',
                title: 'Status',
                text: data.message || data.error || 'Action completed',
                timer: 1500,
                showConfirmButton: false
            });
        }
    }).catch(error => {
        console.error('Error:', error);
        Swal.fire({
            icon: 'error',
            title: 'Oops...',
            text: 'Something went wrong!',
        });
    });
}
</script>
